<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 20%), url('https://images.pexels.com/photos/24104/pexels-photo-24104.jpg?w=940&h=650&auto=compress&cs=tinysrgb');">
  <div class="banner-content">
    <h1>Welcome</h1>
    <p>Find a pet sitter next to you</p>


    <%= form_tag(sitters_path, method: :get) do %>
      <%= text_field_tag :term,  params[:term], placeholder:'Location', class: 'location_text' %>
      <%= submit_tag 'Search', name: nil, class: 'btn btn-primary btn-sm' %>


    <% end %>









  </div>
</div>
