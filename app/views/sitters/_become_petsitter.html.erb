<div class="container">
  <div class="row">
    <%= form_for(current_user) do |f| %>
    <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Contact informations</h3>
    </div>
    <div class="panel-body">
      <%= f.label :phone %>
      <%= f.text_field :phone %>

      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Pets you sit:</h3>
      </div>
      <div class="panel-body">
        <%= image_tag "cat.png" %>
        <%= image_tag "dog.png", class: "grayscale" %>
        <%= image_tag "bird.png" %>
        <%= image_tag "snake.png", class: "grayscale" %>
        <%= image_tag "horse.png", class: "grayscale" %>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Your daily fare</h3>
      </div>
      <div class="panel-body">
        <p> $ </p>
      </div>
    </div>

    <div class="calendar">
      <%= month_calendar do |date| %>
        <strong><a><%= date.strftime("%d") %></a></strong>
      <% end %>
    </div>

    <%= link_to "<button> Save changes </button>", edit_user_path(current_user), class: "btn btn-success" %>

    </div>
    <% end %>
  </div>
</div>
