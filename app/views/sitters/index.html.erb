
<div id="map" style="width: 100%; height: 400px;"></div>

<div id="sub-header">

</div>
<div class="container">
  <div class="row">
  <% @sitters.each do |sitter| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: url('<%= image_path sitter.user.photo, height: 300, width: 400, crop: :fill %>')">
          <div class="card-description">
            <ul>
              <li><h4><%= link_to sitter.user.first_name, user_path(sitter) %></h4></li>
              <li><%= sitter.user.city %></li>
              <li><%= sitter.missions %></li>
              <li><%= sitter.fare %></li>
            </ul>
          </div>
      </div>
    </div>
    <% end %>
  </div>
  <div id="map" class="col-md-5" style="width: 100%; height: 400px;"></div>
</div>




