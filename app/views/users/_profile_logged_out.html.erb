<div class="container">
  <div class="row">
   <div class="col-sm-4 col-md-4" >
      <div class="row">
        <div class="col-md-8 offset-md-3">
          <% if @user.photo.present? %>
            <%= cl_image_tag @user.photo, height: 200, width: 200, crop: :fill %>
          <% else %>
            <%= image_tag "http://fillmurray.com/g/250/250" %>
          <% end %>
          <p><%= @user.about %></p>
        </div>
      </div>
   </div>

   <div class="col-sm-8 col-md-8" >
    <h2>Hi, I'm <%= @user.first_name %>!</h2>
    <p> I live in <%= @user.city %></p>

    <% if @user.sitter %>
      <div class="pets">
        <h4>I sit the following pets:</h4>
        <%= @user.sitter.pet_type %>
        <%= image_tag "cat.png" %>
        <%= image_tag "dog.png", class: "grayscale" %>
        <%= image_tag "bird.png" %>
        <%= image_tag "snake.png", class: "grayscale" %>
        <%= image_tag "horse.png", class: "grayscale" %>
      </div>
      <div class="fare">
        <h4>Daily fare:</h4>
        <h4><%= @user.sitter.fare %> $ / day</h4>
      </div>
      <div class="calendar">
        <%= month_calendar do |date| %>
            <strong><a><%= date.strftime("%d") %></a></strong>
        <% end %>
      </div>
    <% end %>
   </div>
  </div>
</div>
