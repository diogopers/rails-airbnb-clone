<div class="container">
  <div class="row">
    <%= simple_form_for(@user) do |f| %>
      <div class="col-sm-4 col-md-4" >

        <% if current_user and current_user.provider == "facebook" %>
          <%= image_tag current_user.facebook_picture_url %>
        <% elsif %>
          <%= image_tag @user.photo, height: 200, width: 200, crop: :fill %>
        <% elsif %>
          <%= image_tag "http://fillmurray.com/g/250/250" %>
        <% end %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>

        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">About you</h3>
          </div>
          <div class="panel-body">
            <%= f.label :about %>
            <%= f.text_field :about %>
          </div>
        </div>
      </div>

      <div class="col-sm-8 col-md-8" >
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Personnal informations</h3>
          </div>
          <div class="panel-body">
            <%= f.label :first_name %>
            <%= f.text_field :first_name %>

            <%= f.label :last_name %>
            <%= f.text_field :last_name %>
          </div>
        </div>

        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Address</h3>
          </div>
          <div class="panel-body">
            <%= f.label :street_address %>
            <%= f.text_field :street_address %>

            <%= f.label :zipcode %>
            <%= f.text_field :zipcode %>

            <%= f.label :city %>
            <%= f.text_field :city %>
          </div>
        </div>

        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Contact informations</h3>
          </div>
          <div class="panel-body">
            <%= f.label :phone %>
            <%= f.text_field :phone %>

            <%= f.label :email %>
            <%= f.text_field :email %>
          </div>
        </div>
        <% if @sitter.present? %>
          <%= f.fields_for :sitter do |s| %>

            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title">Pets you sit:</h3>
              </div>
              <div class="panel-body">
                <%= image_tag "cat.png" %>
                <%= check_box_tag :pet_type %>

                <%= image_tag "dog.png" %>
                <%= check_box_tag :pet_type %>

                <%= image_tag "bird.png" %>
                <%= check_box_tag :pet_type %>

                <%= image_tag "snake.png" %>
                <%= check_box_tag :pet_type %>

                <%= image_tag "horse.png" %>
                <%= check_box_tag :pet_type %>
              </div>
            </div>

            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title">Your daily fare</h3>
              </div>
              <div class="panel-body">
                <%= s.label :fare %>
                <%= s.text_field :fare %>
              </div>
            </div>

            <div class="calendar">
              <%= month_calendar do |date| %>
                <strong><a><%= date.strftime("%d") %></a></strong>
              <% end %>
            </div>
          <% end %>

        <% end %>

        <%= f.submit %>

      </div>
    <% end %>
    <% if !@sitter.present? %>
      <%#= link_to "<button> Become a petsitter! </button>".html_safe, new_sitter_path %>
      <%= link_to "Become a petsitter!", user_create_sitter_path(@user), class: "btn btn-default" %>
    <% end %>
  </div>
</div>
