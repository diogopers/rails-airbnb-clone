<div class="container">
  <div class="row">
    <%= form_for(current_user) do |f| %>
      <div class="col-sm-4 col-md-4" >

        <% if current_user.token %>
           <%= image_tag current_user.facebook_picture_url %>
         <% else %>
           <%= image_tag "http://placehold.it/200x#200" %>
        <% end %>


        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">About you</h3>
          </div>
          <div class="panel-body">
            <%= f.label :about %>
            <%= f.text_field :about %>
          </div>
        </div>
      </div>

      <div class="col-sm-8 col-md-8" >
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Personnal informations</h3>
          </div>
          <div class="panel-body">
            <%= f.label :first_name %>
            <%= f.text_field :first_name %>

            <%= f.label :last_name %>
            <%= f.text_field :last_name %>
          </div>
        </div>

        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Address</h3>
          </div>
          <div class="panel-body">
            <%= f.label :street_address %>
            <%= f.text_field :street_address %>

            <%= f.label :zipcode %>
            <%= f.text_field :zipcode %>

            <%= f.label :city %>
            <%= f.text_field :city %>
          </div>
        </div>

        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Contact informations</h3>
          </div>
          <div class="panel-body">
            <%= f.label :phone %>
            <%= f.text_field :phone %>

            <%= f.label :email %>
            <%= f.text_field :email %>
          </div>
        </div>
        <% if @sitter.present? %>
          <%= f.fields_for :sitter do |s| %>

            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title">Pets you sit:</h3>
              </div>
              <div class="panel-body">
                <%= image_tag "cat.png" %>
                <%= image_tag "dog.png", class: "grayscale" %>
                <%= image_tag "bird.png" %>
                <%= image_tag "snake.png", class: "grayscale" %>
                <%= image_tag "horse.png", class: "grayscale" %>
              </div>
            </div>

            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title">Your daily fare</h3>
              </div>
              <div class="panel-body">
                <%= s.label :fare %>
                <%= s.text_field :fare %>
              </div>
            </div>

            <div class="calendar">
              <%= month_calendar do |date| %>
                <strong><a><%= date.strftime("%d") %></a></strong>
              <% end %>
            </div>
          <% end %>

        <% end %>

        <%= link_to "<button> Save changes </button>".html_safe, edit_user_path(current_user) %>

      </div>
    <% end %>
    <% if !@sitter.present? %>
      <%#= link_to "<button> Become a petsitter! </button>".html_safe, new_sitter_path %>
      <%= link_to "<button> Become a petsitter! </button>".html_safe, user_path(id: current_user, sitter: true) %>
    <% end %>
  </div>
</div>
