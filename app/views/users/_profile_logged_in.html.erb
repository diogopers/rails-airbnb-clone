<div class="container">
  <div class="row">
    <%= form_for(current_user) do |f| %>
      <div class="col-sm-4 col-md-4" >
        <div class="col-md-8 offset-md-3">
          <%= image_tag "http://placehold.it/200x#200" %>
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">About you</h3>
            </div>
            <div class="panel-body">
              <%= f.label :about %>
              <%= f.text_field :about %>
            </div>
          </div>
        </div>
      </div>

      <div class="col-sm-8 col-md-8" >
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Personnal informations</h3>
          </div>
          <div class="panel-body">
            <%= f.label :first_name %>
            <%= f.text_field :first_name %>

            <%= f.label :last_name %>
            <%= f.text_field :last_name %>
          </div>
        </div>

        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Address</h3>
          </div>
          <div class="panel-body">
            <%= f.label :street_address %>
            <%= f.text_field :street_address %>

            <%= f.label :zipcode %>
            <%= f.text_field :zipcode %>

            <%= f.label :city %>
            <%= f.text_field :city %>
          </div>
        </div>

        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Contact informations</h3>
          </div>
          <div class="panel-body">
            <%= f.label :phone %>
            <%= f.text_field :phone %>

            <%= f.label :email %>
            <%= f.text_field :email %>
          </div>
        </div>

        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Pets you sit:</h3>
          </div>
          <div class="panel-body">
            <%= image_tag "cat.png" %>
            <%= image_tag "dog.png", class: "grayscale" %>
            <%= image_tag "bird.png" %>
            <%= image_tag "snake.png", class: "grayscale" %>
            <%= image_tag "horse.png", class: "grayscale" %>
          </div>
        </div>

        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Your daily fare</h3>
          </div>
          <div class="panel-body">
            <p> $ </p>
          </div>
        </div>

        <div class="calendar">
          <%= month_calendar do |date| %>
          <strong><a><%= date.strftime("%d") %></a></strong>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
