<% if current_user == @user %>
  <%= link_to "<button> Edit profile </button>".html_safe, edit_user_path(current_user) %>
<% end %>


<h2><%= @user.first_name %></h2>
<h2><%= @user.last_name %></h2>
<%= cl_image_tag @user.photo, height: 300, width: 400, crop: :fill %>
<p><%= @user.street_address %></p>
<p><%= @user.zipcode %></p>
<p><%= @user.city %></p>
<p><%= @user.facebook_picture_url %></p>
<p><%= @user.email %></p>
<p><%= @user.about %></p>
<p><%= @user.encrypted_password %></p>



